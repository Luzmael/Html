{
  "version": 2,
  "public": true,
  "cleanUrls": false,  // <- Esto fuerza a mostrar .html
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/api/$1" 
    },
    { 
      "source": "/(tienda-[a-z0-9-]+)", 
      "destination": "/$1.html" 
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS" },
        { "key": "X-Cache-Status", "value": "HIT" }
      ]
    }
  ],
  "trailingSlash": false  // <- Evita conflictos con / al final
}
