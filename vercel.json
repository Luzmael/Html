{
  "version": 2,
  "builds": [
    {
      "src": "api/trigger.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/trigger",
      "dest": "/api/trigger.js",
      "methods": ["POST"]
    },
    {
      "src": "/products/(.*)\\.webp",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ]
}
