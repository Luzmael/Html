{
  "version": 2,
  "public": true,
  "cleanUrls": false,
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/api/$1" 
    },
    // Rewrite para compatibilidad con tus archivos actuales
    { 
      "source": "/(tienda-[a-z0-9-]+)", 
      "destination": "/$1.html" 
    },
    // Nueva regla para URLs limpias
    { 
      "source": "/tienda/([a-z0-9-]+)", 
      "destination": "/tienda-$1.html" 
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS" },
        { "key": "X-Cache-Status", "value": "HIT" }
      ]
    }
  ],
  "trailingSlash": false
}
