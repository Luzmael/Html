{
  "version": 2,
  "public": true,
  "cleanUrls": false,
  "regions": ["sfo1"],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/generador",
      "destination": "/public/generador/index.html"
    },
    {
      "source": "/tienda/([a-z0-9-]+)",
      "destination": "/public/tienda-$1/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/generador",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, GET, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/trigger",
      "dest": "/api/trigger.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/public/(.*)\\.html",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      },
      "continue": true
    },
    {
      "src": "/public/products/(.*)\\.webp",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    }
  ]
}
