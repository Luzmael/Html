{
  "version": 2,
  "builds": [
    {
      "src": "api/trigger.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/generador/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/tienda-*/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // API Endpoint
    {
      "src": "/api/trigger",
      "dest": "/api/trigger.js",
      "methods": ["POST"]
    },
    
   
    {
      "src": "/tienda/([a-z0-9-]+)",
      "dest": "/public/tienda-$1/index.html"
    },
    
    
    {
      "src": "/generador",
      "dest": "/public/generador/index.html"
    },
    
    
    {
      "src": "/products/(.*)\\.webp",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    
    
    {
      "src": "/(.*)",
      "dest": "/public/generador/index.html",
      "status": 200
    }
  ]
}
