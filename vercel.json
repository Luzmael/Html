{
  "version": 2,
  "public": true,
  "cleanUrls": false,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/tienda/([a-z0-9-]+)", // Esta regla es para URLs bonitas como /tienda/zapatos
      "destination": "/public/tienda-$1/index.html"
    },
    {
      "source": "/public/(.*)", // <-- ¡NUEVA REGLA CRUCIAL AQUÍ!
      "destination": "/public/$1" // Permite acceso directo a archivos dentro de 'public/'
    },
    {
      "source": "/", // Para la página principal, si tu index.html está en la raíz
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/products",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=86400" }
      ]
    },
    {
      "source": "/api/image-proxy",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=604800, stale-while-revalidate=86400" },
        { "key": "CDN-Cache-Control", "value": "public, max-age=604800" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=604800" }
      ]
    },
    {
      "source": "/public/(.*)/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    }
  ],
  "regions": ["sfo1"]
}
