{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/tienda-(.*)",
      "dest": "/public/tienda-$1/index.html"
    },
    {
      "src": "/generador",
      "dest": "/public/generador/index.html"
    },
    {
      "src": "/products/(.*)",
      "dest": "/public/products/$1"
    },
    {
      "src": "/",
      "dest": "/public/generador/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
